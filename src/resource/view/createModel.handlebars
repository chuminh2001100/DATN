<div class="mt-4"> 
    <form method="POST" action="/handleImage">
    <div class="form-group">
        <label for="name-input">Name</label>
        <input type="text" name="name" class="form-control"  id="name-input" placeholder="Nhập tên ảnh...">
    </div>
    <div class="form-group">
        <label for="image-input">Image</label>
        <input type="text" name="image" class="form-control"  id="image-input" placeholder="Nhập link image...">
    </div>
    <div class="form-group">
        <label for="description-input">description</label>
        <input type="text" name="description" class="form-control"  id="description-input" placeholder="Nhập miêu tả cho hình ảnh...">
    </div>
    <button type="submit" class="btn btn-primary">Thêm mới ảnh</button>
    </form>
</div>
