<div class="mt-4"> 
    <h3>Cập nhật mẫu ảnh</h3>
    <form method="POST" action="/beauty/{{course._id}}?_method=PUT">
    <div class="form-group">
        <label for="name-input">Name</label>
        <input type="text" name="name" class="form-control" value="{{course.name}}" id="name-input">
    </div>
    <div class="form-group">
        <label for="image-input">Image</label>
        <input type="text" name="image" class="form-control" value="{{course.image}}" id="image-input" >
    </div>
    <div class="form-group">
        <label for="description-input">description</label>
        <input type="text" name="description" class="form-control" value="{{course.description}}" id="description-input">
    </div>
    <button type="submit" class="btn btn-primary">Sửa mẫu ảnh</button>
    </form>
</div>
